<!DOCTYPE html>
<html>
<head>
  <title>PrivateEvents</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag "https://pro.fontawesome.com/releases/v5.10.0/css/all.css" %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <% if flash[:notice] %>
    <div class="bg-primary">
      <p class='notice'>
        <%= notice %></p>
    </div>
  <% end %>
  <% if flash[:alert] %>
    <div class="bg-danger">
      <p class='alert'>
        <%= alert %></p>
    </div>
  <% end %>
  <nav class="navbar bg-info">
  <div class="navbar-brand d-flex mx-auto">
    <%= link_to root_path, class: "navbar-item" do %>
    <h1 class='display-4 font-weight-bolder text-light'>Private Events</h1>
    <% end %>
    <div class="navbar-burger burger" data-target="navbarExample">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </div>

  <div id="navbarExample" class="navbar-menu" >
    <div class="">
      <div class="d-flex mx-auto justify-content-between">

        <% if user_signed_in? %>
        <p class="btn btn-light mx-3">
          <%= link_to 'New event', new_event_path, class: "btn text-dark" %>
        </p>
          <p class="btn btn-light mx-3">
            <%= link_to current_user.name, edit_user_registration_path, class: "btn text-dark" %>
          </p >
          <p class="btn btn-light mx-3">
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn text-dark" %>
          </p>
          <% else %>
          <p class="btn btn-light mx-3">
            <%= link_to 'Sign In', new_user_session_path, class: "btn text-dark" %>
          </p>
          <p class="btn btn-light mx-3">
            <%= link_to 'Sign Up', new_user_registration_path, class: "btn text-dark" %>
          </p>
          <% end %>


      </div>
    </div>
  </div>
  </nav>

  <%= yield %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
</body>
</html>
