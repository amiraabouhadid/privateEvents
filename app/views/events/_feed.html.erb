<div class="row">
  <article class="">

    <p>Welcome to Private Events</p>
    <p>Feel free to create events and invite other users or accept other user's invitations!</p>

  </article>

</div>
<% @events.each do |event| %>
  <div class="">
    <article class="">
      <div class="">
        <figure class="">
          <img src="https://bulma.io/images/placeholders/64x64.png">
        </figure>

    </div>

    <div class="">
      <div class="">

          <strong><%= event.user.username %></strong>
          <br>
          <small><%= event.created_at %></small>
          <br>
          <i><%= event.title %></i>
          <b><%= event.location %></b>
          <b><%= event.date %></b>
          <p><%= event.description %></p>
        </div>

        <nav class="level">
          <div class="">
            <%= link_to event, class: "level-item" do %>
            <span class="icon">
              <i class="fa fa-link" aria-hidden="true"></i>
            </span>
          <% end %>
          <%= link_to edit_event_path(event), class: "level-item" do %>
          <span class="icon">
            <i class="fa fa-pencil" aria-hidden="true"></i>
          </span>
        <% end %>
        <%= link_to event, method: :delete, data: {confirm: "Are you sure you want to delete this event?"} do %>
        <span class="icon">
          <i class="fa fa-trash" aria-hidden="true"></i>
        </span>
      <% end %>


  </div>
</nav>

</article>
</div>
<% end %>
