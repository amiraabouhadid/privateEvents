<div class="row">
  <article class="">

    <p>Welcome to Private Events</p>
    <p>Feel free to create events and invite other users or accept other users' invitations!</p>

  </article>

</div>
<% @events.each do |event| %>
  <div class="">
    <article class="">
      <div class="">
        <figure class="">
          <img src="https://bulma.io/images/placeholders/64x64.png">
        </figure>

    </div>

    <div class="">
      <div class="">
          <br>
          <i>Title: <%= event.title %></i>
          <br>
          <b>Location: <%= event.location %></b>
          <br>
          <b>Starts: <%= event.start_date_time %></b>
          <br>
          <b>Ends: <%= event.end_date_time %></b>
          <br>
          <p><%= event.description %></p>
          <br>
          <p>Host: <%= event.creator.name %></p>
        </div>

        <nav class="level">
          <div class="">
            <%= link_to event, class: "level-item" do %>
            <span class="icon">
              <i class="fa fa-link" aria-hidden="true"></i>
            </span>
          <% end %>
          <%= link_to edit_event_path(event), class: "level-item" do %>
          <span class="icon">
            <i class="fa fa-pencil" aria-hidden="true"></i>
          </span>
        <% end %>
        <%= link_to event, method: :delete, data: {confirm: "Are you sure you want to delete this event?"} do %>
        <span class="icon">
          <i class="fa fa-trash" aria-hidden="true"></i>
        </span>
      <% end %>

  </div>
</nav>

</article>
</div>
<% end %>
