
<section class="container-fluid text-center mx-auto my-4">
<h1><%=current_user.name %>'s Created Events</h1>
<div class="d-flex justify-content-around flex-wrap">
  <% @created_events.each do |event| %>
    <div class="card">
      <div class="card-header">
        <h4><%= event.title %></h4>
        <p><%= event.creator.name %></p>
      </div>
      <div class="card-body">
        <p><%= event.description %></p>
        <p><%= event.location %></p>
        <small><%= event.start_date_time %></small>
        <small><%= event.end_date_time %></small>

        <nav class="level">
          <div class="">
            <%= link_to event, class: "level-item" do %>
            <span class="icon">
              <i class="fa fa-link" aria-hidden="true"></i>
            </span>
          <% end %>
          <%= link_to edit_event_path(event), class: "level-item" do %>
          <span class="icon">
            <i class="fa fa-pencil" aria-hidden="true"></i>
          </span>
        <% end %>
        <%= link_to event, method: :delete, data: {confirm: "Are you sure you want to delete this event?"} do %>
        <span class="icon">
          <i class="fa fa-trash" aria-hidden="true"></i>
        </span>
      <% end %>

    </div>
  </nav>
</div>
</div>
<% end %>
</div>
</section>

